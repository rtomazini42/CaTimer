var
  Inicio: TInicio;


implementation

{$R *.fmx}

uses Contador;

procedure TInicio.btnPlayClick(Sender: TObject);
var  Principal: TContagem;
Minutos: Integer;
begin

  Principal := TContagem.Create(Self);

   if TryStrToInt(EditMinutos.Text, Minutos) and (Minutos > 1) and (Minutos < 640) then
   begin
       Minutos := Minutos -1;
       Principal.LabelTimerMinuto.Text := IntToStr(Minutos);
        if (ComboBox1.Selected.Text = EmptyStr) then
        begin
          Principal.Gato :=  'cat1';
        end;

       Principal.Gato :=  ComboBox1.Selected.Text;

       if (ComboBox2.Selected.Text = 'Pomodoro') then
       begin
            Principal.Tipo := 1;
       end;
       if (ComboBox2.Selected.Text = 'Meditação') then
       begin
            Principal.Tipo := 2;
       end;
       if (ComboBox2.Selected.Text = 'Relaxar') then
       begin
            Principal.Tipo := 3;
       end;


       Principal.Show;
   end
  else
  begin
    // Exibe uma mensagem de erro caso o valor não seja um número válido ou esteja fora do intervalo
    ShowMessage('Por favor, insira um valor numérico entre 2 e 639.');
  end;



  // Exibe o formulário TContagem

end;

procedure TInicio.btnSairClick(Sender: TObject);
begin
        Application.Terminate;
end;

end.
